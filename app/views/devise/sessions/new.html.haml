%div{:class=>"wrapper"}

.login
  %p.alert= alert
  %h2 Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "off", :class => "login_input"
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "off", :class => "login_input"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    %button.btn.btn-primary.btn-block.btn-large{:type => "submit"} Let me in.
  = render "devise/shared/links"